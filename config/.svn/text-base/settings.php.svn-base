/**
 * The util function to retrieve the configuration information.
 * @param string $key is the configuration key.
 * @param mixed $default is the default value of the configuration, if there is no key exists
 * in the config array, the $default value will be returned.
 */
function var_get($key = '', $default = '') {
    global $config;

    if ('' === $key) {
        return $config;
    }

    $config_value = _var_get($key, $config);

    if (NULL === $config_value) {
        //load from db or cache
        $config_value = _var_get_from_db($key);
        if (NULL === $config_value) {
            $config_value = $default;
        }
    }

    return $config_value;
}

function html_resource_get($key = '', $default = '') {
    global $html_resource;

    if ('' === $key) {
        return $html_resource;
    }

    $config_value = _var_get($key, $html_resource);

    return $config_value;
}

function _var_get($key, $config) {
    if (array_key_exists($key, $config)) {
        return $config[$key];
    }
    else {
        $config_keys = explode('/', $key);

        if (count($config_keys) > 1) {
            $depth_key = array_shift($config_keys);

            if (array_key_exists($depth_key, $config)) {
                return _var_get(implode('/', $config_keys), $config[$depth_key]);
            }
            else {
                return NULL;
            }
        }
        else if (1 == count($config_keys)) {
            $first_key = $config_keys[0];
            if (array_key_exists($first_key, $config)) {
                return $config[$first_key];
            }
            else {
                return NULL;
            }
        }
        else {
            return NULL;
        }
    }
}

function _var_get_from_db($key) {
    static $config_values = array();

    if (array_key_exists($key, $config_values)) {
        return $config_values[$key];
    }

    $previous_active_db = db_set_active('geefull');
    $result = db_result(db_query("SELECT `setting` FROM {object_setting} where `name` = '%s'", $key));

    if ($previous_active_db) {
        db_set_active($previous_active_db);
    }
    if ($result) {
        $config_values[$key] = $result;

        return $result;
    }
    else {
        return NULL;
    }
    
}
