/**
 * 随机获取配置图片的URL
 */
function thumb_url() {
	$img_urls = var_get('thumb_url');
	$img_url_count = count($img_urls);

	$img_cur_index = 0;
	if ($img_url_count > 0) {
		$img_cur_index = rand(1, $img_url_count);
	}
	$img_cur_index = 'thumb' . $img_cur_index;
	return $img_urls[$img_cur_index]; //不对index做检查，如果没有配置图片的URL，直接抛异常。
}
